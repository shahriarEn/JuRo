<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <ImageView
            android:id="@+id/FShowSummary_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-15dp"
                android:background="@drawable/shape_exam_show_product"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="35dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center"
                    android:layout_margin="15dp"
                    android:background="#8B8B8B" />

                <TextView
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="توضیحات: "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp" />
                <TextView
                    android:id="@+id/FChallenges_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="3dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_challenges_toolbar"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/FChallenges_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:rotation="180"
            android:src="@drawable/ic_back" />

        <TextView
            android:textColor="#fff"
            android:id="@+id/asdasfd"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>


        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="5dp"
            android:padding="8dp"
            android:rotation="180"
            android:src="@drawable/splash_logo" />
    </LinearLayout>

</RelativeLayout>